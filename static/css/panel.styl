#container
  height 100%
  margin 0
  padding 0

sideNavTransition = 0.3s
sideNavMargin = 400px
borderColor = #e4e4e4
sideNavColor = #337ab7

#body-panel
  border 0

#header-panel
  background-color #f8f8f8
  border-bottom 1px solid
  border-color borderColor
  padding 0
  .navbar
    border none
    margin-bottom 0
    .navbar-header
      padding-top 9px

#main-panel
  padding 0
  padding-left 5px
  padding-right 5px
  z-index 10
  width 100%
  transition sideNavTransition
  border 0
  &.closed
    margin-right 0
    margin-left 0
  &.left
    margin-left sideNavMargin
    margin-right 0
  &.right
    margin-right sideNavMargin
    margin-left 0

#csvContent
  background url("~static/img/data-curator-background.svg") no-repeat fixed !important
  background-size 300px !important
  background-position 50% 60% !important

.loading-pane
  position fixed
  top 0
  left 0
  height 100%
  width 100%
  z-index 200
  background-color rgba(0,0,0,0.4)

.modalHide
  display: none
.modal1
  width 300px
  height 200px
  line-height 200px
  position fixed
  top 50%
  left 50%
  margin-top -100px
  margin-left -150px
  background-color #f8f8f8
  border-radius 5px
  text-align center
  z-index 205 /* 1px higher than the overlay layer */
  .glyphicon.spinning
    animation spin 1s infinite linear
    -webkit-animation spin2 1s infinite linear
    margin-top 10px
    vertical-align top
    display block
  .validation-load
    display block
    vertical-align bottom
    font-size 1.3em
    text-align: center

#sidenav
  height 100%
  position absolute
  margin-left 0px
  z-index 50
  border-radius 0
  top 0
  overflow-x hidden
  transition sideNavTransition
  .navbar-brand
    text-transform: capitalize
    color #fff
  &.closed
    width 0 !important
    border 0 !important
  &.left
    width sideNavMargin
    left 0
    border-right solid 3px sideNavColor
  &.right
    width sideNavMargin
    right 0
    border-left solid 3px sideNavColor
  .navbar-header
    background-color sideNavColor
    border-bottom 1px solid
    border-color borderColor
    display block !important
    float none
    margin-left -15px
    margin-right -15px
    margin-top 0
    margin-bottom 26px
    padding-top 12px
    @media screen and (min-width: 768px)
      padding-top 12px
      padding-left 15px
      margin-bottom 15px
  .closebtn
    position absolute
    top 0
    margin 0
    padding 0
    z-index 75
    right 0
    a
      background-color inherit !important
  form
    height 100%
    position relative
    margin 0 !important
    border-top 0
    padding-left 0 !important
    padding-right 0 !important
    label
      @extend #sidenav form
      text-align left
      padding-left 0 !important
      display inline-block
    div
    input
    select
      @extend #sidenav form

#sidenav .container-fluid
  position relative
  height 100%

#sidenav-footer
  position relative
  bottom 0
  width 100%
  // height: 10%
  display: block
  .left
    float left
    display inline-block
    &.disabled
      pointer-events none
      cursor default
  .right
    float right
    display inline-block
    &.disabled
      pointer-events none
      cursor default

#tablePropertiesBtn
  float left
  margin-left: 15px

#csvTab a
  position relative

span.tabclose
  position absolute
  top 0
  right 0

// tab close buttons
span.tabclose.btn-default
  color #ccc !important

span.tabclose.btn-default:hover
  color #333 !important

.input-sm input
  display inline-block !important

// slide-out sideNav transitions
.sideNav-right-enter-active
.sideNav-left-enter-active
  transition all 0.4s ease-in
.sideNav-left-leave-active
.sideNav-right-leave-active
  transition all 0.3s ease-in

.sideNav-left-enter
  transform translateX(-(sideNavMargin)) !important
.sideNav-right-enter
  transform translateX(sideNavMargin) !important

.sideNav-left-leave-to
  transform translateX(250px) !important
.sideNav-right-leave-to
  transform translateX(-250px) !important

.btn-default
  background-color transparent !important
  color white

#preferenceProperties
  width inherit !important
  margin 0 -15px 0 -15px
  a
    border none

#toolbar li
  text-align center
  display: inline-block !important
  i
  object
  a
  div
    margin 0

#toolbar li object
  max-width 13px
  max-height 13px
  // &.down
  //   margin-bottom -2px

#tableProperties .form-control
  width auto !important

#columnProperties option
  width auto

.tooltip-container
  color blue !important
  .tooltip-text
    &a
      color #fff !important
