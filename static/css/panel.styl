#container
  height 100%
  margin 0
  padding 0
#home-container
  @extend #container
  width 100%
  position fixed

sideNavTransition = 0.3s
sideNavMargin = 400px
borderColor = #e4e4e4
sideNavColor = #337ab7

#header-panel
  display: block !important
  position relative
  background-color #f8f8f8
  border-bottom 1px solid
  border-color borderColor
  padding 0
  .navbar
    border none
    margin-bottom 0
    .navbar-header
      padding-top 9px

#body-panel
  border 0
  display: block !important
  position relative
  min-height: 100%

#main-panel
  position fixed
  padding 0
  padding-left 5px
  padding-right 5px
  z-index 10
  width 100%
  height 100%
  transition sideNavTransition
  border 0
  &.closed
    margin-right 0
    margin-left 0
  &.left
    margin-left sideNavMargin
    margin-right 0
  &.right
    margin-right sideNavMargin
    margin-left 0

#main-middle-panel
#csvEditor
  height 100%
  width 100%
.tab-pane
  height 100%
  width 100%
  position fixed

#csvContent
  background url("~static/img/data-curator-background.svg") no-repeat fixed !important
  background-size 300px !important
  background-position 50% 60% !important
  height 100%
  width 100%
  .editor
    overflow: scroll
    height: 100%

.loading-pane
  position fixed
  top 0
  left 0
  height 100%
  width 100%
  z-index 200
  background-color rgba(0,0,0,0.4)

.modalHide
  display: none
.modal1
  width 300px
  height 200px
  line-height 200px
  position fixed
  top 50%
  left 50%
  margin-top -100px
  margin-left -150px
  background-color #f8f8f8
  border-radius 5px
  text-align center
  z-index 205 /* 1px higher than the overlay layer */
  .glyphicon.spinning
    animation spin 1s infinite linear
    -webkit-animation spin2 1s infinite linear
    margin-top 10px
    vertical-align top
    display block
  .validation-load
    display block
    vertical-align bottom
    font-size 1.3em
    text-align: center

sideNavHeaderHeight = 55px

#sidenav
  // border 0
  height calc(100% - 55px)
  position absolute
  // box-sizing: border-box
  margin 0
  z-index 50
  border-radius 0
  top 0
  // bottom 0
  // margin-bottom 20px
  // padding 20px
  // hide overflow-x for transitions
  overflow-x: hidden
  transition sideNavTransition
  border-top solid 3px sideNavColor
  &.closed
    width 0 !important
    border 0 !important
    // margin-right 5px
  &.left
    width sideNavMargin
    left 0
    border-right solid 3px sideNavColor
  &.right
    width sideNavMargin
    right 0
    border-left solid 3px sideNavColor
  #sidenav div:first-child
    // overflow-x scroll !important
    // overflow-y scroll !important
    border 0
    height 100%
    position relative
    // background-color transparent
    padding 0
    margin 0
  .navbar-header
    position absolute
    top 0
    background-color sideNavColor
    // border-bottom 1px solid
    // border-color borderColor
    display block !important
    height sideNavHeaderHeight !important
    width 100%
    // float none
    // margin-top 0
    // margin-bottom 26px
    // padding-top 12px
    @media screen and (min-width: 768px)
      // padding-top 12px
      // padding-left 15px
      // margin-bottom 15px
    .navbar-brand
      // height auto
      position relative
      text-transform: capitalize
      color #fff
    .closebtn
      position absolute
      top 0
      margin 0
      padding 0
      z-index 75
      right 0
    a
      background-color inherit !important
  &.left
    .btn-default
      color #000 !important

  form
    // box-sizing border-box
    // overflow-x scroll !important
    // overflow-y scroll !important
    // height 100%
    margin-top sideNavHeaderHeight !important
    position absolute
    padding 10px 10px 0 15px !important
    position relative !important
    display block !important
    // margin 0 !important
    // border-top 0
    label
      // @extend #sidenav form
      text-align left
      padding-left 0 !important
      display inline-block
    div
    input
      width auto
    select
      // @extend #sidenav form
      height auto

