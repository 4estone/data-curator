/*stylus and vue loaders cannot see the ids/classes not in the vue page*/

#body-panel
  background-position center
  opacity 0.8

.panel, .container-fluid
  background transparent !important

h1, h2, h3
  color #337ab7 !important

table
  border-collapse collapse
  width 100%

th, td
  text-align left
  padding 8px

.heading-text
  color #337ab7 !important

tr
  &:nth-child(even)
    background-color #f2f2f2

kbd
  background-color #999
